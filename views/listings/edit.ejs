<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br>
    <h3>Edit your listing</h3><br>
    <form action="/listings/<%=listing._id%>?_method=PUT" 
        method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input class="form-control" name="listing[title]" 
            placeholder="enter title" type="text" 
            value="<%=listing.title%>" required>
            <div class="valid-feedback">Title looks good!</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" rows="5" cols="40"
            placeholder="add description" class="form-control" required>
            <%=listing.description%>
            </textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        
        <div class="mb-3">
            <p>Original image</p>
          <img src="<%= originalImageUrl %>" alt="listing-image" class="show-img">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
        <input type="file" name="listing[image]" 
        class="form-control" placeholder="enter image URL/Link" 
        >
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" 
        name="listing[price]" placeholder="enter price" 
        value="<%=listing.price%>" required>
        <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
        <input type="text" class="form-control" 
        name="listing[country]" placeholder="enter country" 
        value="<%=listing.country%>" required>
        <div class="invalid-feedback">Please enter a country name</div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" 
        name="listing[location]" placeholder="enter location" 
        value="<%=listing.location%>" required>
        <div class="invalid-feedback">Please enter a location</div>
        </div>
        
        <button class="btn edit-btn btn-dark mt-3">Edit your listing</button>
        <br><br><br>
    </form>
</div>
</div>
